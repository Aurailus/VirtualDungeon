{
	"compilerOptions": {
		"strict": true,
		"alwaysStrict": true,

		"target": "es5",
		"module": "commonjs",
		"esModuleInterop": true,
		"lib": [ "dom", "es6" ],

		"noEmitHelpers": true,
		"importHelpers": true,

		"outFile": "build",

		"jsx": "react",
		"jsxFactory": "Preact.h",

		"removeComments": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"noUnusedParameters": true,
		"downlevelIteration": true
	},
	"include": [ "src/**/*" ]
}
